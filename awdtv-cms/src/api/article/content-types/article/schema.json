{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Data": {
      "type": "date"
    },
    "Visual": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "Slug": {
      "type": "string",
      "regex": "^\\/[a-z0-9]+(?:-[a-z0-9]+)*$",
      "unique": true,
      "required": true
    },
    "Content": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "Tag": {
      "type": "enumeration",
      "enum": [
        "Van de voorzitter",
        "Teamnieuws",
        "De Kantine",
        "Clubnieuws",
        "Overig"
      ]
    }
  }
}
